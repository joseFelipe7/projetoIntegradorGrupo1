                <div class="input-group-prepend">
                  <span class="input-group-text etiquetaCampo">Rua</span>
                </div>
                <input type="text" name="contratanteRua" class="form-control campoMeusDadosStyle campoDadoReadonly" id="ruacp" placeholder="Digite sua rua" value="<%= cliente_endereco.logradouro %>">
              </div>
            </div>
          </div>

          <!-- input linha 3 -->
          <div class="form-row">
            <!-- input numero -->
            <div class="form-group col-md-6">
              <label for="numero">Nº <span class="campoObrigatorio">*</span></label>
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text etiquetaCampo">Nº</span>
                </div>
                <input type="number" name="contratanteN" class="form-control campoMeusDadosStyle campoDadoReadonly" id="numerocp" placeholder="Número" value="<%= cliente_endereco.numero %>">
              </div>
            </div>
            <!-- input complemento -->
            <div class="form-group col-md-6">
              <label for="complemento">Complemento</label>
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text etiquetaCampo">Complemento</span>
                </div>
                <input type="text" name="contratanteComplemento" class="form-control campoMeusDadosStyle campoDadoReadonly" id="complemento" placeholder="Complemento" value="<%= cliente_endereco.complemento %>">
              </div>
            </div>
          </div>
          <label for="">(<span class="campoObrigatorio">*</span>) Campos obrigatórios</label>

      
    

          <!-- botao editar ABRE O MODAL-->
          <!-- Button trigger modal -->
          <div class="d-flex justify-content-end">
            <button type="submit" class="btn botaoMeusDados">SALVAR</button>
          </div>
        
        </form>

      <% }) %> 
     

