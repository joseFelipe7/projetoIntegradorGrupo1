          <div class="form-row">
            <!-- input data cep -->
            <div class="form-group col-6">
              <label for="cep">CEP <span class="campoObrigatorio">*</span></label>
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text etiquetaCampo">CEP</span>
                </div>
                <input type="number" name="contratanteCep" class="form-control campoMeusDadosStyle campoDadoReadonly" id="cepcp" placeholder="CEP - apenas números" maxlength="8" value="<%= cliente_endereco.cep %>"> 
              </div>
            </div>

            <!-- buttom pesquisar cep -->
            <div class="form-group col-6">
              <label>Buscar cep</label>
              
              <div class="input-group">
                <button type="button" class="btn botaoMeusDados"><img src="/img/endereco.png" alt="Meus dados" title="Meus dados">Pesquisar</button>
              </div>
            </div>
          </div>
        <!-- input linha 2 -->
          <div class="form-row">
            <!-- input UF -->
            <div class="form-group col-md-6">
              <label for="UF">UF <span class="campoObrigatorio">*</span></label>
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text etiquetaCampo">UF</span>
                </div>
                <input type="text" name="contratanteUf" class="form-control campoMeusDadosStyle campoDadoReadonly" id="UFc" placeholder="Estado - UF" maxlength="2" value="<%= cliente_endereco.uf %>">
              </div>
            </div>
            <!-- input cidade -->
            <div class="form-group col-md-6">
              <label for="cidade">Cidade <span class="campoObrigatorio">*</span></label>
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text etiquetaCampo">Cidade</span>
                </div>
                <input type="text" name="contratanteCidade" class="form-control campoMeusDadosStyle campoDadoReadonly" id="cidadecp" placeholder="Digite sua cidade" value="<%= cliente_endereco.cidade %>">
              </div>
            </div>
          </div>

          <!-- input linha 3 -->
          <div class="form-row">
            <!-- input rua -->
            <div class="form-group col">
              <label for="rua">Rua <span class="campoObrigatorio">*</span></label>
