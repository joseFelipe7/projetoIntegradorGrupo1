<!-- include do card com pedidos - para o contratante -->
<div class="card m-0 container-fluid p-0">
    <div class="row no-gutters">
        <!-- coluna status -->
        <div class="col-md-3 bg-roxoRS statusCardPedido">
            <h5 class="card-header"><%= pedido.nomeServico %></h5>
            <div class="card-body">
                <h5 class="card-title">ATIVO</h5>
                <p class="card-text">SERVIÇO: #<%= pedido.idServico %></p>
                <p class="card-text">PRESTADOR: <%= pedido.nomePrestador %></p>
                <p class="card-text"><%= pedido.nomeServico %></p>
            </div>
        </div>
        <!-- coluna dados -->
        <div class="col-md-5 m-0 p-0 dadosPrestadorServicos">
            <div class="card-body m-0 p-0">
                <div class="dadosPrestador row no-gutters">
                    <div class="col-md-4 iconPrestadorCard">
                        <img src="/img/prestadorPedido.png" class="rounded-circle border-dark" alt="prestador">
                    </div>
                    <div class="col-md-8">
                        <ul class="list-group list-group-flush dadosListaPedido">
                            <li class="list-group-item list-group-item-action p-0 rounded">
                                <a href="#" class="text-roxoRS text-decoration-none font-weight-bold"><%= pedido.nomePrestador %></a>
                            </li>
    
                            <li class="list-group-item list-group-item-action p-0 rounded">
                                <p class="card-text">
                                    <small class="text-azul">2 anos na plataforma</small>
                                </p>
                            </li>
    
                            <li class="list-group-item list-group-item-action p-0 rounded">
                                <span class="text-muted"><%= pedido.idServico %></span>
                            </li>
    
                            <li class="list-group-item list-group-item-action p-0 rounded">
                                <p class="card-text">
                                    <small class="text-danger">OFF-LINE</small>
                                </p>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="dadosServico row-column no-gutters bg-roxoClaro">
                    <div class="col-md-12">
                    
                        <ul class="list-group list-group-flush datasListaPedido">
                            <li class="list-group-item list-group-item-action p-0 bg-roxoRS">
                                <span class="text-white"><%= pedido.nomeServico %></span>
                            </li>

                            <% pedido.historico.forEach(item => { %>
                                <li class="list-group-item list-group-item-action p-0">
                                    <% if (item.statusHistorico == "ENV") { %>
                                        Enviado: <%= moment(item.modificacao).format('L'); %>
                                    <% } else if(item.statusHistorico == "ANALI") { %>
                                        Análise: <%= moment(item.modificacao).format('L'); %>
                                    <% } else if(item.statusHistorico == "CANC") { %>
                                        Cancelado: <%= moment(item.modificacao).format('L'); %>
                                    <% } else if(item.statusHistorico == "AGUAR") { %>
                                        Aguardo: <%= moment(item.modificacao).format('L'); %>
                                    <% } else if(item.statusHistorico == "CONC") { %>
                                        Concluído: <%= moment(item.modificacao).format('L'); %>
                                    <% } %>
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
        <!-- coluna valores -->
        <div class="col-md-4 col-sm-12 m-auto valoreParcelasMobile">
            <div class="row-column h-100 w-100 d-flex flex-column align-items-center">
                <div class="col valorCardPedido p-0">
                    <div class="row no-gutters">
                        <div class="col-sm-4 iconValor">
                            <img src="/img/pagamento.png" class="rounded-circle border-dark" alt="">
                        </div>
                        <div class="col-sm-8 valoresCardPedido px-1 py-2">
                            <ul class="list-group list-group-flush datasListaPedido">
                                <li class="list-group-item list-group-item-action rounded p-0 pt-1">
                                    PAGAMENTO:
                                </li>
        
                                <li class="list-group-item list-group-item-action rounded p-0 text-azul">
                                    <%= pedido.formaPag %>
                                </li>

                                <button class="btn btn-outline-success m-1">4x de 250,00</button>
                            </ul>
                        </div>
                    </div>
                </div>
