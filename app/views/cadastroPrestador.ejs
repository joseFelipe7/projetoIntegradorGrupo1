<!DOCTYPE html>
<html lang="pt-br">
<%- include('include/head', {title:'ToolsHall - Cadastre Prestador'}) %>

<body>
  <%- include('include/header')%>
  <%- include('include/menuNav') %>

  <main class="cadastro-prestador col-12 m-0 p-0">
    <div class="content-ls">

      <div class="form-cadastroPrestador" id="containerPrestador">
        <h3 class="prestador-titulo">CADASTRE-SE:</h3>

        <form action="/cadastro/prestador" class="d-flex flex-column justify-content-center" id="formularioPrestador" method="POST">

          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="prestador-inputNome">Nome</label>
              <input type="text" name="prestadorNome" class="form-control" id="prestador-inputNome">
            </div>
          </div>
          

          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="prestador-inputEmail">Email</label>
              <input type="text" name="prestadorEmail" class="form-control" id="prestador-inputEmail">
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="prestador-inputSenha">Senha</label>
              <input type="password" name="prestadorSenha" class="form-control" id="prestador-inputSenha">
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="prestador-inputRepetirSenha">Repetir senha</label>
              <input type="password" name="repetirSenha" class="form-control" id="prestador-inputRepetirSenha">
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="prestador-inputCpf">CPF</label>
              <input type="text" name="prestadorCpf" class="form-control" id="prestador-inputCpf">
            </div>
          </div>

          <div class="alert alert-danger alert-dismissible fade show" id="alert-cadP" role="alert" hidden>
            <ul></ul>
            <button type="button" class="close" id="close-listP" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>

          <button type="submit" class="align-self-center" id="buttonPrestador">Cadastrar</button>

        </form>

      </div>

    </div>
  </main>

  <%- include('include/footer') %>
  <%- include('include/script') %>
</body>

</html>