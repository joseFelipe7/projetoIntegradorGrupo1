<!DOCTYPE html>
<html lang="pt-br">
<%- include('include/head', {title:'ToolsHall - Cadastre Contratante'}) %>

<body>
  <%- include('include/header')%>
  <%- include('include/menuNav') %>

  <main class="cadastro-contratante col-12 m-0 p-0">
    <div class="content-ls">

      <div class="form-cadastroContratante" id="containerContratante">
        <h3 class="contratante-titulo">CADASTRE-SE:</h3>

        <form action="/cadastro/contratante" class="d-flex flex-column justify-content-center" id="formularioContratante" method="POST">
          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="contratante-inputNome">Nome</label>
              <input type="text" name="contratanteNome" class="form-control" id="contratante-inputNome">
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="contratante-inputEmail">Email</label>
              <input type="text" name="contratanteEmail" class="form-control" id="contratante-inputEmail">
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="contratante-inputSenha">Senha</label>
              <input type="password" name="contratanteSenha" class="form-control" id="contratante-inputSenha">
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="contratante-inputRepetirSenha">Repetir senha</label>
              <input type="password" name="contratanteRepetirSenha" class="form-control" id="contratante-inputRepetirSenha">
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="contratante-inputCpf">CPF</label>
              <input type="text" name="contratanteCpf" class="form-control" id="contratante-inputCpf">
            </div>
          </div>

          <div class="alert alert-warning alert-dismissible fade show" id="alert-cadC" role="alert" hidden>
            <ul></ul>
            <button type="button" class="close" id="close-listC" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>

          <button type="submit" class="align-self-center" id="buttonContratante">Cadastrar</button>

        </form>

      </div>

    </div>
  </main>

  <%- include('include/footer') %>
  <%- include('include/script') %>
  
</body>

</html>