<div class="col-12">
    <div class="card p-0 m-0" style="border: none;">
        <div class="card-header card-hd-orcamento m-0">
            Orçamento
        </div>

        <div class="card-body">
            <form action="/area-prestador/envia-orcamento" method="POST">
                <div class="form-group">
                    <label>Nº DO SERVIÇO</label>
                    <input type="text" name="numServico" class="form-control input-form-preocarmento"
                        placeholder="numero do serviço">
                </div>
                <div class="form-group">
                    <label>Prestador</label>
                    <input type="text" name="prestador" class="form-control input-form-preocarmento"
                        placeholder="Nome do prestador">
                </div>
                <div class="form-group">
                    <label>Cliente</label>
                    <input type="text" name="cliente" class="form-control input-form-preocarmento"
                        placeholder="Nome do cliente">
                </div>
                <div class="form-group">
                    <label>Serviço</label>
                    <input type="text" name="servico" class="form-control input-form-preocarmento"
                        placeholder="Titulo do pedido">
                </div>
                <div class="form-group">
                    <label>Para quando você precisa desse serviço?</label>
                    <input type="date" name="dataServico" class="form-control input-form-preocarmento">
                </div>
                <div class="form-group">
                    <label>Detalhes do Serviço</label>
                    <textarea class="form-control input-form-preocarmento" name="detalhes" id="detalhes" cols="30"
                        rows="6"></textarea>
                </div>

                <div class="form-group">
                    <label>Resumo do Serviço</label>
                    <textarea class="form-control input-form-preocarmento" name="resumo" id="detalhes" cols="30"
                        rows="6"></textarea>
                </div>

                <div class="form-group">
                    <label>Valor</label>
                    <input type="number" name="valor" class="form-control input-form-preocarmento"
                        placeholder="Valor do orçamento">
                </div>

                <button type="submit" id="modalPedido" class="btn-form-preorcamento">Enviar Orçamento</button>
            </form>
        </div>
    </div>
</div>