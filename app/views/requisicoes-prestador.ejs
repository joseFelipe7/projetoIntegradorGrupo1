<h3>Requisições - Área Prestador</h3>

<!-- sanfona -------------------------------------------------------->
<div id="accordion">
    <!-- card sanfona 1 ------------------------------------------------->
    <div class="card">
        <!-- topo 1 sanfona -->
        <div class="card-header badge-info sanfonaTopoRequisicoes" id="headingOne">
            <h5 class="mb-0">
                <button class="btn btn-link tituloSanfonaTopoRequisicoes" data-toggle="collapse"
                    data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    <img src="/img/icon-pendente.svg" alt="Meus dados" title="Meus dados">
                    Pendentes
                </button>
            </h5>
        </div>

        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
            <div class="card-body">
            <!-- pedido 1 ------------------------------------------------>
            <div class="dadosServico row no-gutters bg-roxoClaro rounded">
                <div class="col-md-12 rounded">
                    <ul class="list-group list-group-flush historicoListaPedido rounded">
                        <li class="list-group-item list-group-item-action p-2 bg-roxoRS rounded">
                            <span class="text-white">HISTÓRICO DE SERVIÇOS AGUARDANDO RESPOSTA</span>
                        </li>
                        <% if(data.listEnv.length != 0 ){ %>
                        <% data.listEnv.forEach( item =>{ %>
                        <li class="row no-gutters list-group-item list-group-item-action p-2 historico">
                            <div class="col-11 col-sm-10 col-md-9 m-0 px-0">
                                <span class="bg-roxoFundo text-azul rounded px-1 py-2">Serviço Nº: <%= item.numero %> - <%= item.titulo%></span>
                                <span class="d-xs-none mx-1 bg-roxoFundo text-azul rounded px-1 py-2">Aberto em: <%= data.moment(item.dataSolicitacao).format('DD/MM/YYYY') %></span>
                                <span class="bg-roxoFundo text-azul rounded px-4 py-2">Cliente <a href="/usuario/area-prestador/pedidos" class="text-azul font-weight-bold"><%= item.nomeCliente%></a></span>
                            </div>
                            <div class="col-11 col-sm-2 col-md-3 m-0 px-1">
                                <div class="row">
                                    <div class="col-12">
                                        <form action="/usuario/area-prestador/requisicoes" method="post">
                                            <input type="text" value="A" name="respota" hidden>
                                            <input type="text" value="<%= item.numero %>"  name="pedido" hidden>
                                            <button class="btn btn-success">Aceitar</button>
                                        </form>
                                        <form action="/usuario/area-prestador/requisicoes" method="post">
                                            <input type="text" value="R" name="respota" hidden>
                                            <input type="text" value="<%= item.numero %>"  name="pedido" hidden>
                                            <button class="btn btn-danger">Recusar</button>
                                        </form>
                                    
                                    </div>
                                    <div class="col-12">
                                        <a class="text-center" data-toggle="collapse" href="#descricaoPedido<%= item.numero %>" role="button" aria-expanded="false" aria-controls="descricaoPedido">Descrição</a>
                                    </div>
                                </div>
                                
                            </div>
                            <div class="collapse" id="descricaoPedido<%= item.numero %>">
                                <div class="card card-body">
                                    <%= item.descricao %>
                                </div>
                              </div>
                        </li>
                        <% }) %>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
            <!-- fim pedido 1 -------------------------------------------->
        </div>
    </div>

    <!-- card sanfona 2 ------------------------------------------------->
